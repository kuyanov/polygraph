FROM ubuntu:latest

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update && \
    apt-get install -y build-essential git cmake bsdmainutils libboost-program-options-dev
RUN git clone https://github.com/kuyanov/libsbox.git && \
    mkdir libsbox/build && \
    cd libsbox/build && \
    cmake .. && \
    make && \
    yes | make install

COPY . /polygraph
WORKDIR /polygraph

RUN rm -rf build && \
    cmake . -B build -D CMAKE_BUILD_TYPE=ASan -D TEST=1 && \
    cmake --build build && \
    cmake --install build

ENTRYPOINT [ "bash", "-c", "./test-runner.sh || (cat /var/log/polygraph/common.log && exit 1)" ]
